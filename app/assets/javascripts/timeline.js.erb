var timeline_ready = function () {

    $(".toggle-documents, .resources-list h2, " +
            ".notes-list h2").unbind().click(function(e) {
        var obj = $(this).parents(".slider-list").find(".toggle-documents");

        var list = $(this).parents(".slider-list").find(".slider");


        if(list.length == 0)
            return;

        if(list.is(":hidden")) {
            obj.removeClass("glyphicon-chevron-down");
            obj.addClass("glyphicon-chevron-up");
        } else {
            obj.removeClass("glyphicon-chevron-up");
            obj.addClass("glyphicon-chevron-down");
        }

        list.slideToggle();

    });
    $(".resources-list .slider, .notes-list .slider").hide();
    $(".toggle-documents, .notes-list").parent().children("h2").addClass("pointer");
    $('#scroll-to-top').click(function () {
        $('body,html').animate({
            scrollTop: 0
        }, 400);
        return false;
    });
    $(".oncelink").one('click',function(e){
        $(this).on('click',function(ev){
            ev.preventDefault();
            return false;
        });
    });
};

$(document).ready(timeline_ready);
