
.template-list {

    background-color: #f7f8ff;
    padding: 20px;
    margin: 20px 0;

    #tempTable {

        .row {

            &:hover {
                background-color: #edeeff;
            }
            p {
                margin-bottom: 0;
            }

            .form-group {
                margin: 5px 0;
            }

            #addTemp, .rmTemp {
                cursor: pointer;
            }

            .rmTemp {
                color: $alizarin-light;

                &:hover {
                    color: $alizarin;
                }

            }
        }

    }

}