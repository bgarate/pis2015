.profile_picture{

    width:50px;
    height:50px;

}

.profile_picture img{

    width:100%;
    height:100%;
    -moz-border-radius: 50%;
    border-radius: 50%;

}

#mentees_table {

    background-color: #1ABB9B;
    border-color: #169F85;
    min-height: 90px;
    color: white;

    tr:hover{
        background-color: #169F85;
    }

    h1 {
        background-color: #169F85;
    }

    input {
        background-color: #1ABB9B;
    }

    li {
        background-color: #E05956;
        display: block;
        float: left;
        margin-left: 7px;
        padding: 4px 5px;
        color: white;

        -moz-border-radius: 5px;
        border-radius: 5px;
    }

    li a {
        color: white;
    }

    a {
        color:white;
    }

    .datatable {
        thead td {

            cursor: pointer;

            &:hover {
                background-color: #1ABB9B;
            }
        }
    }

    .zero{
        padding: 10px 10px;
        font-size:14px;
        font-weight: normal;
    }

}


#milestones_table {

    background-color: #FF8D40;
    border-color: #FC6A06;
    color: white;
    min-height: 90px;
    margin-bottom: 30px;

    tr:hover{
        background-color: #FC6A06;
    }

    h1 {
        background-color: #FC6A06;
    }

    input {
        background-color: #FF8D40;
    }

    a {
        color: white;
    }

    .datatable {
        thead td {

            cursor: pointer;

            &:hover {
                background-color: #FF8D40;
            }
        }
    }

    .calendar {
        background-image: url('layouts/calendar-white.png');
    }

    .zero{
        padding: 10px 10px;
        font-size:14px;
        font-weight: normal;
    }

    .pagination {

        a {
            border-color: #ff6f26;;
            background-color: #fa8232;
        }

        .next a, .previous a {

        }

        .disabled a {
            color: #e6712e;
        }

        .active a {
            background-color: #ffffff;
            color: #fa8232;
        }

    }

}
