form.main-form {
    margin-top: 30px;
    border-bottom: 3px solid $peterriver;
    padding: 0 30px 35px 30px;
    background-color: white;

    h1 {
        color:white;
        text-align: center;
        background-color: $peterriver;
        margin: 0px -30px 20px -30px;
        padding: 15px;
        font-size: 16px;
        font-weight: bold;
    }

    button[type=submit] {
        position: absolute;
        right: 8px;
        bottom: 0;
        border-radius: 0;
        background-color: $peterriver;
        border: none;
        color: white;

        &:active, &:focus {
            background-color: $peterriver-focus;
            color: white;
            box-shadow: none;
        }

    }

    textarea{
        resize: vertical;
    }


    .has-success, .has-error {
        .form-control {
            box-shadow: none;
        }
    }

    &.slide-on-click {
        padding-bottom: 0;
        margin-bottom: 30px;
        position: relative;

        h1 {
            margin-bottom: 0;
            width: calc(100% + 60px);
            float: right;
            @include transition(0.5s ease-in-out all);
        }
        .form-slide {
            padding-top: 20px;
            margin-bottom: 35px;
            clear: both;
        }

        button[type=submit] {
            right: 0;
        }

        &:not(.active-slide) {
            background-color: transparent;
            h1 {
                width: 150px;
                padding: 10px;
                font-size: 14px;
            }
        }

    }

