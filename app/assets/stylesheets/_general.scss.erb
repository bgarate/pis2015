
.large-text {
    font-size: 2rem;
}

.date-row {
    padding: 10px 0;
    overflow: auto;
    min-height:45px;
}

.editable {

    position: relative;
    cursor: pointer;

    &:hover {
        &:after {
            content: '';
            display: block;
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            background-color: rgba($turqoise, 0.5);
        }

        &:after {
            content: "\e065";
            font-family: "Glyphicons Halflings";
            display: inline;
            text-align: center;
            color: white;
            font-size: 30px;
        }
    }
}

.edit-form {
    display: none;
}

.calendar {
    background-image: image-url('layouts/calendar-red.png');
    background-repeat: no-repeat;
    background-size: 24px 24px;
    min-height: 24px;
    float: left;
    margin-left: 15px;
    padding-left: 30px;
    line-height: 24px;
    font-weight: bold;
    font-size: 10px;;

    &.white {
        background-image: image-url('layouts/calendar-white.png');
    }

    &.right {
        margin-left: inherit;
        padding-left: inherit;
        margin-right: 15px;
        padding-right: 30px;
        background-position: right;
        float: right;
    }

}

.milestone-highlight {
  position: absolute;
  top: -10px;
  left: 15px;
  width: 30px;
  height: 30px;
  background-position: left;
  background-size: contain;

  &.true {
    background-image: image-url('layouts/star_full.png');
  }

  &.false {
    background-image: image-url('layouts/star_empty.png');
  }

  &.right {
    left: auto;
    right: 15px;
  }

  &.small {
    width: 25px;
    height: 25px;
  }

  &.static {
    position: static;
    display: block;
  }
}


.milestone-status {
    position: absolute;
    top: -10px;
    left: 45px;
    width: 30px;
    height: 30px;
    background-position: left;
    background-size: contain;

    &.done {
        background-image: image-url('layouts/status-done.png');
    }

    &.pending {
        background-image: image-url('layouts/status-pending.png');
    }

    &.rejected {
        background-image: image-url('layouts/status-rejected.png');
    }

    &.right {
        left: auto;
        right: 45px;
    }

    &.small {
        width: 25px;
        height: 25px;
    }

    &.static {
        position: static;
        display: block;
    }
}

