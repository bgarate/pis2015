
#btnListMilestones{
    float: right;
    margin-bottom: 10px;
}


#milestone-info {
    min-height: 250px;
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: $body-background;
    color:#34495E;

    .edit {
        position: absolute;
        top: 15px;
        right: 20px;
        font-size: 14px;
    }

    .left-pane {
        flex: 1 0 0;
        width: 33.3%;
        text-align: right;
        padding: 0 15px 0 30px;
        border-right: solid 2px #D0D4D7;
    }
    .right-pane {
        flex: 2 0 0;
        width: 66.6%;
        padding: 0 30px 0 15px;
    }

    .right-pane, .left-pane {
        float: left;
        height: 100%;
        flex: 1 0 auto;
    }

    .milestone-icon {
        width: 80px;
        height: 80px;
        float: right;
        //padding: 15px;
        border: solid 2px #34495E;
        border-radius: 50%;

        img {
            width: 100%;
        }

        .glyphicon {
            font-size: 40px;
            line-height: 76px;
            display: block;
            text-align: center;
        }
    }

    h2 {
        clear: both;
        max-width: 70%;
        float: right;
        font-size: 20px;
        margin: 10px 0 5px 0;
    }
    h3 {
        clear: both;
        float: right;
        font-size: 14px;
        max-width: 50%;
        color: #1DA8E7;
        margin: 0;
    }

    form {
        clear: both;
        float: right;
    }

    .selector{
        width: 100%;
    }

    #btnNewMilestone{
        float: left;
        margin-bottom: 10px;
    }

    .last-update{
        clear:both;
        color:#999999;
        font-size:10px;
        font-weight:bold;
        padding-top:30px;
        text-align:right;
    }

}

.milestone-last-update{
    font-size: 10px;
    font-weight:bold;
    color: #999999;
    float: right;
    clear: both;
}

#milestone-notes {
    background-color: $body-background;
    color:#34495E;
    padding: 20px;
    padding-bottom: 0;

    form {

        padding-bottom: 20px;

        input {
            width: calc(100% - 50px);
        }
        select {
            width: 45px;
        }
    }

    ul {

        list-style: none;
        padding: 0;
        margin: 0 -20px;

        li {

            padding: 5px 20px;
            position: relative;

            &:nth-child(2n+1) {
                background-color: $body-background-dark;
            }
            &:nth-child(2n) {
                background-color: $body-background;
            }

            h2 {
                margin: 0;
                margin-top: 5px;
                font-weight: bold;
                font-size: 14px;
                float: left;
            }

            .time {
                font-size: 10px;
                float: right;
                padding-right: 30px;
                line-height: 2;
            }

            p {
                clear: both;
                margin: 0;
                padding: 10px 0 10px 10px;
            }

            .options {
                position: absolute;
                top: 10px;
                right: 10px;
                > div {
                    display: block;
                }
            }


        }
    }
}

#milestone-asignees {

    padding: 0;
    margin-top: 10px;

    .item {
        float: left;
        background-color: $body-background;
        padding: 10px 15px;
        width: 100%;
        border-bottom: 3px solid $body-background-dark;
        margin-top: 10px;

        &:hover {
            text-decoration: none;
            background-color: #D9D8E4;
        }

        img {
            border-radius: 50%;
            width: 100%;
        }

        .info {
            display: table-cell;
            vertical-align: middle;
            width: 60%;
            height: 60px;
        }

        .picture {
            display: table-cell;
            vertical-align: middle;
            height: 60px;
            width: 40%;
        }

        h2 {
            font-weight: bold;
            font-size: 12px;
            margin: 0;
            text-align: right;
        }

        h3 {
            margin: 0;
            text-align: right;
            clear: both;
            font-size: 10px;
            color: #3497DA;

        }
    }
}


