body.milestones {
    background-color: white;
}

#btnListMilestones{
    float: right;
    margin-bottom: 10px;
}


#milestone-info {
    min-height: 250px;
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: $body-background;
    color:#34495E;

    .edit {
        position: absolute;
        top: 15px;
        right: 20px;
        font-size: 14px;
    }

    .highlight {
      position: absolute;
      top: 15px;
      right: 35px;
      font-size: 14px;
    }

    .left-pane {
        flex: 1 0 0;
        width: 33.3%;
        text-align: right;
        padding: 0 15px 0 30px;
        border-right: solid 2px #D0D4D7;
    }
    .right-pane {
        flex: 2 0 0;
        width: 66.6%;
        padding: 0 30px 0 15px;
    }

    .right-pane, .left-pane {
        float: left;
        height: 100%;
    }

    .milestone-icon {
        width: 80px;
        height: 80px;
        float: right;
        //padding: 15px;
        border: solid 2px #34495E;
        border-radius: 50%;

        img {
            width: 100%;
        }

        .glyphicon {
            font-size: 40px;
            line-height: 76px;
            display: block;
            text-align: center;
        }
    }

    h2 {
        clear: both;
        max-width: 70%;
        float: right;
        font-size: 20px;
        margin: 10px 0 5px 0;
    }
    h3 {
        clear: both;
        float: right;
        font-size: 14px;
        max-width: 50%;
        color: #1DA8E7;
        margin: 0;
    }

    form {
        clear: both;
        float: right;
    }

    .selector{
        width: 100%;
    }

    #btnNewMilestone{
        float: left;
        margin-bottom: 10px;
    }

    .last-update{
        clear:both;
        color:#999999;
        font-size:10px;
        font-weight:bold;
        padding-top:30px;
        text-align:right;
    }

}

.milestone-last-update{
    font-size: 10px;
    font-weight:bold;
    color: #999999;
    float: right;
    clear: both;
}

.milestone-container {
    background-color: $body-background;
    color:#34495E;
    padding: 20px 20px 10px;
    margin-bottom: 15px;


    .notes-form {

        padding-bottom: 20px;

        input.form-control {
            margin-top: 1px;
            width: calc(100% - 75px);
        }
        select.form-control {
            width: 75px;
        }
    }

    ul {

        list-style: none;
        padding: 0;
        margin: 0 -20px;

        li {

            padding: 5px 20px;
            position: relative;

            &:nth-child(2n+1) {
                background-color: $body-background-dark;
            }
            &:nth-child(2n) {
                background-color: $body-background;
            }

            h2 {
                margin: 0;
                margin-top: 5px;
                font-weight: bold;
                font-size: 14px;
                float: left;
            }

            .time {
                font-size: 10px;
                float: right;
                margin-right: -10px;
                line-height: 2;
            }

            p {
                clear: both;
                margin: 0;
                padding: 10px 0 10px 10px;
            }

            .options {
                position: absolute;
                top: 10px;
                right: 10px;
                > div {
                    display: block;
                }
            }


        }
    }
}

#milestone-asignees {

    padding: 0;
    margin-top: 10px;

    .item {
        float: left;
        background-color: $body-background;
        padding: 10px 15px;
        width: 100%;
        border-bottom: 3px solid $body-background-dark;
        margin-top: 10px;

        &:hover {
            text-decoration: none;
            background-color: #D9D8E4;
        }

        img {
            border-radius: 50%;
            width: 100%;
        }

        .info {
            display: table-cell;
            vertical-align: middle;
            width: 60%;
            height: 60px;
        }

        .picture {
            display: table-cell;
            vertical-align: middle;
            height: 60px;
            width: 40%;
        }

        h2 {
            font-weight: bold;
            font-size: 12px;
            margin: 0;
            text-align: right;
        }

        h3 {
            margin: 0;
            text-align: right;
            clear: both;
            font-size: 10px;
            color: #3497DA;
            
            word-wrap: break-word;
            width:80px;

        }
    }
}

.chosen-choices{
    padding: 0;
    list-style-type: none;
}

.chosen-choices li.search-choice {
    list-style-type: none;
    background-clip:padding-box;
    background-color:#EEEEEE;
    background-image:linear-gradient(#F4F4F4 20%, #F0F0F0 50%, #E8E8E8 52%, #EEEEEE 100%);
    background-repeat:repeat-x;
    background-size:100% 19px;
    border:1px solid #AAAAAA;
    border-radius:3px;
    box-shadow:#FFFFFF 0 0 2px inset, rgba(0, 0, 0, 0.0470588) 0 1px 0;
    color:#333333;
    cursor:default;
    line-height:13px;
    margin:3px 5px 3px 0;
    max-width:100%;
    padding:3px 20px 3px 5px;
    position:relative;
}
.chosen-choices li.search-choice span {
    word-wrap:break-word;
}

.datatable{

    .icon-row {
        width: 26px;
        font-size: 32px;
    }

    .description_row, .title_row{

        max-width: 139px;
        word-wrap:break-word;
    }

    .category_row{
        max-width: 85px;
        min-width: 85px;
    }

    .people_row{
        max-width: 120px;
        min-width: 120px;
    }

    ul.tags_row{

        /*max-width: 191px;*/


        float: right;
        margin-right: 30px;

        li {
            position: relative;
            float: left;
            background-color: #4183C4;
            font-size: 10px;
            list-style: none;
            line-height: $tag-height;
            height: $tag-height;
            padding: 0 10px;
            color: white;
            font-weight: bold;
            margin-top: 4px;
            margin-left: 20px;

            border-top-right-radius: 5px;
            border-bottom-right-radius: 5px;

            &:before {
                content: '';
                position: absolute;
                left: -$tag-height;
                @include triangle(left, #4183C4, $tag-height);
            }

            &:after {
                content: '';
                position: absolute;
                left: -1px;
                top: calc(50% - 2px);
                width: 4px;
                height: 4px;
                border-radius: 50%;
                background-color: white;
            }
        }

    }


    li{
        list-style-type: none;
    }

    ul{
        padding: 0;
        list-style-type: none;
    }
}

tfoot input {
    width: 100%;
    padding: 3px;
    box-sizing: border-box;
}

#hitos td{
    max-width:10ch;
    word-wrap:break-word;
    ul:not(.tags_row){


        li {
            display: inline;

        }

        li:before {
            content: " | ";
        }

        li:first-child:before {
            content: none;
        }
    }

}

.objective-badge{
    color: white
}


