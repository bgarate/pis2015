#div_project {

    position: relative;

    margin-top: 30px;
    border-bottom: 3px solid $peterriver;
    padding: 0px 30px 30px 30px;
    background-color: white;

    h1 {
        color: white;
        text-align: center;
        background-color: $peterriver;
        margin: 0px -30px 20px -30px;
        padding: 15px;
        font-size: 16px;
        font-weight: bold;
      
    }

    #buttonOne {
        position: absolute;
        right: 8px;
        bottom: 0;
        border-radius: 0;
        background-color: $peterriver;
        border: none;
        color: white;

        &:active, &:focus {
            background-color: $peterriver-focus;
            color: white;
            box-shadow: none;
        }
    }

    #buttonTwo {
        border-radius: 0;
        background-color: $peterriver;
        border: none;
        color: white;

        &:active, &:focus {
            background-color: $peterriver-focus;
            color: white;
            box-shadow: none;
        }
    }



    input {
        border-radius: 0;
        box-shadow: none;

        border-width: 1px 1px 3px 1px;

        &:focus {

            box-shadow: none;
        }
    }

    .has-success, .has-error {
        .form-control {
            box-shadow: none;
        }
    }

    .edit {
        position: absolute;
        top: 16px;
        right: 22px;
        font-size: 17px;

        color: #8fb0cc;

        &:hover {
            color: white;
        }
    }
}

td.project-inactive {
    a {
        color: grey;
    }
}

td.project-finished {
    a {
        text-decoration:line-through;
    }
}

ul#project-asignees {

    padding-left: 0;

    li {

        list-style-type: none;
        padding: 5px 10px 0 10px;

        &:hover{
            background-color: #D5DADC;
            .glyphicon {
                color: #337ab7;
            }
        }

        .glyphicon {
            font-size: 10px;
            vertical-align: 4px;
            color: #91a5b5;
        }

        a:hover {
            text-decoration: none;
        }
    }
}