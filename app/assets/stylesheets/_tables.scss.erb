
.table-container {
    margin-top: 30px;
    border-bottom: 3px solid $alizarin;
    //padding: 0px 30px 30px 30px;
    background-color: white;
    position: relative;

    a {
        color: $alizarin;
        text-decoration: none;
    }
    a:hover {
        color: $alizarin-dark;
    }

    h1 {
        color:white;
        text-align: center;
        background-color: $alizarin;
        //margin: 0px -30px 20px -30px;
        margin-bottom: -1px;
        padding: 15px;
        font-size: 16px;
        font-weight: bold;
    }
    .table-add-button{
        color: whitesmoke;
    }
    .datatable {
        thead td {

            cursor: pointer;

            &:hover {
                background-color: rgba(255, 233, 227, 1);
            }

            .sorting_desc {

            }

            .sorting_asc {

            }
        }
    }

    .dataTables_filter {
        position: absolute;
        right: 38px;
        top: -35px;

        label {
            &:before {
                content: "\e003";
                font-family: 'Glyphicons Halflings';
                position: absolute;
                left: 10px;
                top: 2px;
                z-index: 10;
                color: white;
                font-size: 0.9em;
            }
        }

        input {
            position: relative;
            height: 20px;
            border-radius: 15px;
            background-color: $alizarin-dark;
            border: none;
            box-shadow: none;
            color: white;
            padding-left: 30px;
        }
    }

}