
.table-container {
    margin-top: 30px;
    border-bottom: 3px solid $alizarin;
    background-color: white;
    position: relative;


    a {
        color: $alizarin;
        text-decoration: none;
    }
    a:hover {
        color: $alizarin-dark;
    }

    h1 {
        color:white;
        text-align: center;
        background-color: $alizarin;
        //margin: 0px -30px 20px -30px;
        margin-bottom: -1px;
        padding: 15px;
        font-size: 16px;
        font-weight: bold;
    }
    .table-add-button{
        color: whitesmoke;
    }
    .datatable {
        thead td {

            cursor: pointer;

        }
    }

    .calendar{
        margin-left: 0px;
    }

    .dataTables_filter {
        position: absolute;
        right: 38px;
        top: -35px;

        label {
            &:before {
                content: "\e003";
                font-family: 'Glyphicons Halflings';
                position: absolute;
                left: 10px;
                top: 2px;
                z-index: 10;
                color: white;
                font-size: 0.9em;
            }
        }

        input {
            position: relative;
            height: 20px;
            border-radius: 15px;
            background-color: $alizarin-dark;
            border: none;
            box-shadow: none;
            color: white;
            padding-left: 30px;
        }
    }

}
.table-difrows {
    tbody tr{
        &:nth-child(2n+1) {
            background-color: ghostwhite;
        }
    }
}

.table-container#container-hitos {
    margin-top: 0px;
    h1 {
        margin-top: 5px;
        margin-bottom: -1px;
        padding: 15px;
    }
}

.actions {
    text-align: right;
    a {
        font-size: 16px;
        color: $alizarin-light;
    }
}

.table > tbody > tr {

    &:hover {
        background-color: #D5DADC;
        .actions {
            a {
                color: $alizarin;
            }
        }
    }

    > td {
        vertical-align: middle;
    }
}

.image-col {
    max-width: 50px;
}


.small-image-col {
    width: 30px;
}

.dataTables_length{
    float: right;
    margin: 15px 15px 0 0;
}

.dataTables_paginate {
    text-align: center;
}

.pagination {
    li a {
        color: $alizarin;
    }

    .active a, .active a:hover {
        background-color: $alizarin;
        border-color: $alizarin;
    }
}

.no-hover:hover {
    background-color: inherit !important;
}