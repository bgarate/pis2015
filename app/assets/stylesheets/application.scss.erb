@import "bootstrap-sprockets";
@import "bootstrap";
@import "compass";
@import "jquery-ui/core";
@import "jquery-ui/autocomplete";
@import "bootstrap-datepicker.standalone";
@import "chosen/chosen.min";

$turqoise: #169F85;
$peterriver: #2980B8;
$mooveit-orange: #FF8D40;
$sunflower: #F0C30F;
$alizarin: #E64C3C;
$midnightblue:#34495E;

$lightblue : #F2F2F2;

$turqoise-dark: #1ABB9B;
$peterriver-dark: #03A5FF;
$mooveit-orange-dark: #FC6A06;
$sunflower-dark: #E8B113;
$alizarin-dark: #FF6C61;
$midnightblue-dark:#23323D;

$peterriver-focus: #1d76b8;

$nav-background: $midnightblue;
$nav-hover: $peterriver;

$body-background: #F4F4F4;
$body-background-dark: #d4d4d4;

html, body {
  width: 100%;
  height: 100%;
}

body {
  background-color: $body-background;

  &.milestones {
    background-color: white;
  }

}

@import "general";
@import "forms";
@import "tables";

@import "navigation";
@import "cards";
@import "login";
@import "milestones";


.tt-hint {
    color: #999;
}

.tt-menu { /* UPDATE: newer versions use tt-menu instead of tt-dropdown-menu */
    margin-top: 12px;
    padding: 8px 10px;
    background-color: $midnightblue;
    border: 1px solid #ccc;
    border: 1px solid rgba(0, 0, 0, 0.2);
    border-radius: 8px;
    box-shadow: 0 5px 10px rgba(0,0,0,.2);
    color: white;
}
