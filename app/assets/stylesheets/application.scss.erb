.tt-hint {
    color: #999;
}

.tt-menu { /* UPDATE: newer versions use tt-menu instead of tt-dropdown-menu */
    margin-top: 12px;
    padding: 8px 10px;
    background-color: $midnightblue;
    border: 1px solid #ccc;
    border: 1px solid rgba(0, 0, 0, 0.2);
    border-radius: 8px;
    box-shadow: 0 5px 10px rgba(0,0,0,.2);
    color: white;
    min-width: 200px;
}

.tt-suggestion:hover {
    cursor: pointer;
    color: white;
    background-color: #2980B8;
}

.tt-suggestion.tt-cursor {
    color: white;
    background-color: #2980B8;

}

.search-header{
    background-color: $midnightblue-dark;
    margin: 0 -10px;
    padding-left: 5px;
    font-weight: bold;
}

.search-result {
    padding: 5px;
    .glyphicon {
        font-size: 14px;
    }
}
.search-image {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    margin-right: 15px;
}
