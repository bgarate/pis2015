

<div class="container">
  <div class="row">
    <div class="card-col col-xs-4 col-xs-offset-4">

      <%= form_for @category, html: { class:'timeline-form main-form ','data-toggle': 'validator'}  do |c| %>
          <h1 class=""><span class="glyphicon glyphicon-list"></span> <%= t('categories.edit.header') %></h1>

          <div class="form-slide">

            <div class="form-group">

              <%= c.label t('categories.name'), class: "control-label" %>
              <%= c.text_field :name, class: "form-control", 'data-validation':"required" %>
            </div>

            <div class="form-group">

              <%= c.label t('categories.doc_url'), class: "control-label" %>
              <%= c.text_field :doc_url, class: "form-control", 'data-validation':"required" %>
            </div>

            <div class="row">
              <div class="form-group col-xs-6">
                <%=  c.label t('categories.icon'), class: "control-label" %>
                <button name="category[icon]" class="btn btn-default" role="iconpicker" data-icon="<%= @category.icon %>"></button>
              </div>
            </div>

            <div class="row">
              <div class="form-group col-xs-6">
                <%=  c.label t('categories.feedback'), class: "control-label" %>
                <%=  c.check_box :is_feedback, {:checked=> @category.is_feedback}, class: "" %>
              </div>
            </div>


            <%= c.hidden_field(:updated_at, :value =>Time.now) %>
            <%= c.button t('categories.edit.submit'), :type => 'submit', class: "btn btn-default" %>
          </div>
      <% end %>
    </div>
  </div>
</div>