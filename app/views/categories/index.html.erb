<div class="container">
  <div class="row">
    <div class="col-xs-12">

      <div class="table-container table-difrows">
        <h1>
          <% if current_user_admin? %>
              <%= link_to new_category_path, method: :get do%>
                  <span class='large-text glyphicon glyphicon-plus table-add-button pull-left'></span>
              <% end %>
              <% end %>
          <%= t('categories.header') %>
        </h1>
        <table class="table datatable" data-info="false">
          <thead>
          <tr>
            <th></th>
            <th><%= t('categories.name') %></th>
            <th><%= t('categories.created') %></th>
            <th><%= t('categories.updated') %></th>
            <% if current_user_admin? %>
                <th><%= t('milestones.actions') %></th>
            <% end %>
          </tr>
          </thead>
          <tbody>
          <% @category.each do |c| %>
              <tr>
                <td><span class="large-text glyphicon <%= c.icon %>"></span></td>
                <td><%= c.name %></td>
                <td><div class="calendar left"><%= c.created_at %></div></td>
                <td><div class="calendar left"><%= c.updated_at %></div></td>
                <% if current_user_admin? %>
                    <td><%= link_to edit_category_path(c) do%>
                          <span class='large-text glyphicon glyphicon-pencil'></span>
                      <% end %>
                    <%= link_to categories_destroy_path(category_id: c.id),
                                    data: { confirm: t('categories.delete.sure') } do %>

                          <span class='large-text glyphicon glyphicon-trash'></span>
                      <% end %>
                    </td>
                <% end %>
              </tr>
          <%end%>
          </tbody>
        </table>
        <%= will_paginate @category %>
      </div>


    </div>
  </div>
</div>