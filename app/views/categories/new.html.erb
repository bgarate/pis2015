<div class="container">
  <div class="row">
    <div class="card-col col-xs-4 col-xs-offset-4">
    <h1><span class="glyphicon glyphicon-list"></span> <%= t('categories.new.header') %></h1>

    <%= form_for([@category]) do |c| %>
        <div class="form-group">
          <%= c.label t('categories.name'), class: "control-label" %>
          <%= c.text_field :name, class: "form-control", 'data-validation':"required check_name" %>
        </div>

        <div class="form-group">
          <%= c.label t('categories.icon'), class: "control-label" %>
          <%= c.text_field :icon, class: "form-control" %>
        </div>


        <%= c.hidden_field(:created_at, :value =>Time.now) %>
        <%= c.hidden_field(:updated_at, :value =>Time.now) %>

        <%= c.button t('categories.new.submit'), :type => 'submit', class: "btn btn-default" %>
     </div>
    <% end %>
  </div>
</div>
