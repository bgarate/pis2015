

<form action='<%= collections_generate_path %>' id='from-collection-form' class='timeline-form main-form slide-on-click clearfix toggle-disabled' data-toggle='validator'>

  <h1 class=""><span class="glyphicon glyphicon-check"></span> <%= t('collections.generate.header') %></h1>

  <div class="form-slide">
    <div class="row text-right">
      <div class="card-col col-xs-12">
        <%= link_to '/collections' do %>
            <button type="button" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-th-list"></span>  <%=t('collections.see_all')%></button>
        <%end%>
      </div>
    </div>

    <div class="row">
      <div class="form-group">

        <label><%=t('collections.select')%></label>
        <br>
        <select name="id" class="chzn-select category" style="width:100%" >
          <% @collections.each do |t| %>
              <option value=<%=t.id%> ><%=t.title%></option>
          <%end%>
        </select>

      </div>
    </div>

    <input type="hidden" name="person_id" value="<%= @person.id %>">
    <button type="submit" class="btn btn-default" id="submitg"><%=t('collections.generate.submit')%></button>
  </div>
</form>

<script>
    $(".chzn-select").chosen();
</script>