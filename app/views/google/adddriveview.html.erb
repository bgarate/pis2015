<div class="container">
  <div class="row">
    <div class="card-col col-xs-8 col-xs-offset-2">

      <form action='adddrive' class='main-form'>
        <h2> <%=t(:attachgoogledrivedoc) %> </h2>
        <input name='milestone_id' type='hidden' value=<%=@milestone_id%> readonly class='form-control'>
        <input name='redirect_url' type='hidden' value=<%=@redirect_url%> readonly class='form-control'>

        <label for='URL' class='control-label'> <%=t(:documenturl)%> </label>


        <% if params[:error] %>
            <div class="form-group has-error">
        <% else %>
            <div class="form-group">
        <% end %>
            <input type='input' name='URL' class='form-control' data-validation="required">
            <% if params[:error] %>
              <span class="help-block form-error"><%= t(:invalidurl) %></span>
            <% end %>
        </div>

        <input type='submit' value=<%=t(:attach)%> class='btn btn-default'>
      </form>

    </div>
  </div>
</div>
