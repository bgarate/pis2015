<div id="milestone-info">
  <%= if @milestone.status != 'rejected'
        milestone_status(@milestone)
      end %>
  <%= milestone_status_rej(@milestone) %>

  <div class="left-pane">
    <div class="milestone-icon"><%= image_tag @milestone.icon %></div>
    <h2><%= @milestone.title %></h2>
    <% if @milestone.category %>
        <h3><%= @milestone.category.name %></h3>
    <%else%>
        <%= render 'categories/form' %>
    <%end%>
  </div>
  <div class="right-pane">
    <p><%= @milestone.description %></p>
    <p><%=
        if feedback? and @milestone.feedback_author
          @milestone.feedback_author.name
        end
    %></p>

    <% if @milestone.start_date %>
    <div class="calendar right">
          <%= l(@milestone.start_date, format: "%A, %B %d %Y").capitalize %>
    </div>
    <% end %>
    <% if @milestone.due_date %>
      <div class="calendar">
        <%= l(@milestone.due_date, format: "%A, %B %d %Y").capitalize %>
      </div>
    <% end %>

    <% unless @milestone.tags.empty? %>
        <ul class="tags clearfix">
          <% @milestone.tags.each do |t| %>
              <li><%= t.name %></li>
          <%end%>
        </ul>
    <%end%>
  </div>
</div>

<ul id="milestone-asignees">
  <%@milestone.people.each do |p| %>
      <li>
        <%= person_picture @image_id %>
        <div class="info">
          <h2><%= p.name %></h2>
          <h3><%= "HOLA" || p.tech_role %></h3>
        </div>
      </li>
  <%end%>
</ul>
