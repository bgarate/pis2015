<% provide(:title, "Edit Milestone") %>
<h1>Edit Milestone</h1>

<%= form_for @milestone do |m| %>
<%= params[:controller] %><br>
  <p> 
    <%= m.label 'Title:' %><br>
    <%= m.text_field :title %>
  </p>

  <p>
    <%= m.label 'Due date:' %><br>
    <%= m.text_area :due_date %>
  </p>

    <div class="field">
      <%= label_tag('Tags'), nil, class: 'small_label') %>
      <br>
      <%= select_tag(:tags, options_from_collection_for_select(@tags.all, :id, :name), :multiple => true) %>
    </div>

  <%= m.submit 'Save changes'%>
  </p>

<% end %>