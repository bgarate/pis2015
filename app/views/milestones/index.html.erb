<div class="container">
  <div class="row">
    <div class="col-xs-12">

      <div class="table-container">
        <h1><%= t('milestones') %></h1>
        <table class="table datatable">
          <thead>
              <tr>
                <td></td>
                <td>Nombre</td>
                <td>Descripción</td>
                <td>Fecha límite</td>
                <td></td>
              </tr>
          </thead>
          <tbody>
          <% @milestone.each do |m| %>
              <tr>
                <td><%= milestone_status_rej(m,:static) %></td>
                <td><%= milestone_status(m,:static) %></td>
                <td><%= link_to m.title, milestone_path(m), method: :get%></td>
                <td><%= m.description.truncate(50) %></td>
                <td><div class="calendar left"><%= m.due_date %></div></td>
                <td><%= link_to edit_milestone_path(m) do%>
                    <span class='large-text glyphicon glyphicon-pencil'></span>
                  <% end %>
                </td>
                <td><%= link_to milestone_path(m),
                                method: :delete,
                                data: { confirm: t('sure?') } do %>
                      <span class='large-text glyphicon glyphicon-remove'></span>
                      <% end %>
                </td>

              </tr>
          <% end %>
          </tbody>
        </table>
      </div>


    </div>
  </div>
</div>
