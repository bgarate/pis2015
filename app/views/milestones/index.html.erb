<h1>MILESTONES:</h1>
<table class="table">
  <% @milestone.each do |m| %>
    <tr>
      <td><%= m.id %></td>
      <td><%= link_to m.title, milestone_path(m)%></td>
      <td><%= m.due_date %></td>
      <td><%= m.description %></td>
      <td><%= m.status %> </td>

      <td><%= link_to t('mil_delete'), milestone_path(m),
                      method: :delete,
                      data: { confirm: t('sure?') } %></td>

    </tr>
  <% end %>
</table>