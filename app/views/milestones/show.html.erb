<div class="container-fluid">
  <div class="row">
    <%= link_to t('milestones'), milestones_path %><br>
    <div class="card-col col-xs-7">
      <div id="milestone-info">
        <%= milestone_status(@milestone) %>
        <div class="left-pane">
            <div class="milestone-icon"><%= image_tag @milestone.icon %></div>
            <h2><%= @milestone.title %></h2>
            <% if @milestone.category %>
                <h3><%= @milestone.category.name %></h3>
            <%end%>
        </div>
        <div class="right-pane">
            <p><%= @milestone.description %></p>
            <p><%=t(@milestone.status) %></p>
            <p><%=
                if @milestone.status != :done
                  session[:return_to] ||= request.referer
                  link_to t(:markdone), milestone_path(@milestone, :milestone  => {:status => :done}), :method => :put
                end
            %></p>
          <p>
            <%=t(:attachmentsdocs)%>: <br>
          <ul>
            <%@milestone.resources.each do |r|%>
                <li><%=link_to r.title, r.url, :target => "_blank"%></li>
            <%end%>
          </ul>
          <%=link_to t(:adddoc), :controller => 'google', :action => 'adddriveview', :milestone_id => @milestone.id%>

          </p>
            <div class="calendar white right"><%= l(@milestone.due_date, format: "%A, %B %d %Y").capitalize %></div>
            <p>
              <% if @milestone.category!=nil %>
                <%= render @milestone.category %>
              <%else%>
                <%= render 'categories/form' %>
              <%end%>
            </p>
        </div>
        <div class="clearfix">
          <h2><%= 'Notes' %></h2>
          <%= render @milestone.notes %>

          <h2><%= 'Add Notes' %></h2>
          <%= render 'notes/form' %>

        </div>
      </div>

    </div>
  </div>
</div>
