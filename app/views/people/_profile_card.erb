<div id="profile-card" class="card profile">
  <div id="profile-picture">
    <div class="img-container">
      <% if @image_id %>
          <%= cl_image_tag(@image_id) %>
    <% else %>
        <%= cl_image_tag "lfblntfejcpmmkh0wfny.jpg" %>
      <% end %>
    </div>
  </div>
  <h1><%= @name %></h1>
  <h2><%= @trole %></h2>
  <ul id="skills">
    <% @skills.each do |s| %>
        <li><%= image_tag s.icon %></li>
    <% end %>
  </ul>
  <hr>
  <h4>MENTORES</h4>
    <% if @mentorships.empty? %>
        <p>Sin mentores en la actualidad</p>
    <%else%>
        <ul id="mentors">
            <% @mentorships.each do |s| %>
                <li><%= link_to cl_image_tag(s.image_id), s %></li>
            <%end%>
        </ul>
    <%end%>
    <%if current_user_admin? %>
        <a href="add_mentor_form?mentee_id=<%=@identifier%>" class="btn btn-info" role="button"><span class="glyphicon glyphicon-add"></span>Agregar Mentores</a>
    <%end%>
</div>
