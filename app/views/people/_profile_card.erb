<div id="profile-card" class="card profile">
  <div id="profile-picture">
    <div class="img-container">
      <%= image_tag "test/siluetaCorbata1.jpg" %>
    </div>
  </div>
  <h1><%= @name %></h1>
  <h2><%= @trole %></h2>
  <ul id="skills">
    <% @skills.each do |s| %>
        <li><%= image_tag s.icon %></li>
    <% end %>
  </ul>
  <hr>
  <h4>MENTORES</h4>
    <% if @mentorships.empty? %>
        <p>Sin mentores en la actualidad</p>
    <%else%>
        <% @mentorships.each do |s| %>
            <li><%= s.name %></li>
        <%end%>
        <br>
    <%end%>
  <a href="#" class="btn btn-info" role="button"><span class="glyphicon glyphicon-add"></span>Agregar Mentores</a>
</div>