  <% if @milestones and not @milestones.empty? %>
      <ul id="milestone-list">
        <% @milestones.each do |e| %>
            <li>
              <h2><%=e.title%></h2>
              <p><%=e.description%></p>
              <p><%=t(e.status) %></p>
              <p><%=
                  if e.status != :done
                    session[:return_to] ||= request.referer
                    link_to t(:markdone), milestone_path(e, :milestone  => {:status => :done}), :method => :put
                  end
              %></p>
              <div class="calendar"><%=l(e.due_date, format: "%A, %B %d %Y")%></div>
              <ul class="tags">
                <!--<li>Speaker</li>-->
              </ul>
              <div class="clearfix"></div>
            </li>
        <% end %>
      </ul>
  <% else %>
          <p>No hay hitos que mostar</p>
  <% end %>
