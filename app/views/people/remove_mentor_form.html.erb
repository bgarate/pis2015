<% I18n.locale = :es %>

<div class="container">
  <div class="row">
    <div class="card-col col-xs-4 col-xs-offset-4">
      <% if @mentors.empty? %>
          <h3> <%= t('mentor.nomore_msg')+' '+@mentee.name %></h3>
          <%= link_to t(:back), 'javascript:history.go(-1);' %>
      <% else %>
          <%= form_tag({controller: "people", action: "remove_mentor", method: "get"}, {:class => 'main-form'}) do %>
              <h1>
                <span class="glyphicon glyphicon-user"></span><span class="glyphicon glyphicon-remove"></span><span class="glyphicon glyphicon-user"></span>
                <% t('mentor.adding_to') %> <br><br> <%= @mentee.name %>:</h1>
              <input type="hidden" name="mentee_id" value="<%= @mentee.id %>">

              <div class="field">
                <%= label_tag(t('mentor.name'), nil, class: 'small_label') %>
                <br>
                <%= select_tag(:mentor_id, options_from_collection_for_select(@mentors.all, :id, :name), :required => true) %>
              </div>
              <br>
              <%= button_tag t('mentor.remove.submit'), options= :type => 'submit', class: "btn btn-default" %>
          <% end %>

      <% end %>

    </div>
  </div>
</div>