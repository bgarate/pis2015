<div class="container-fluid">
  <div class="row">
    <%= link_to t('milestones'), milestones_path %>
    <div class="card-col col-xs-2">
      <%= render 'people/profile_card' %>
      <%= render 'people/stats_card' %>
    </div>
    <div class="card-col col-lg-5">
      <%= render 'people/events_card' %>
      <div class="card pending">
        <h1>Hitos pendientes</h1>
        <% if @overcomes and not @overcomes.empty? %>
            <ul id="pending-list">
              <% @overcomes.each do |e| %>
                  <li>
                    <h2><%=e.title%></h2>
                    <p><%=e.description%></p>

                    <ul>
                      <%e.resources.each do |r|%>
                          <li><%=link_to r.title, r.url, :target => "_blank"%></li>
                      <%end%>
                    </ul>


                    <div class="calendar right"><%=l(e.due_date, format: "%A, %B %d %Y")%></div>
                    <%= milestone_short_info(e) %>
                    <ul class="tags">
                      <!--<li>Speaker</li>-->
                    </ul>
                    <div class="clearfix"></div>
                  </li>
              <% end %>
            </ul>
        <% else %>
            <p>No hay hitos que mostar</p>
        <% end %>
      </div>
    </div>
    <div class="card-col col-lg-5">
      <div align="center">
        <h2><%= 'Assign:' %></h2>
        <% count=0 %>
        <%= form_tag ({:action => 'assign_milestone', :controller => 'people', :person_id => @id}) do   %>
          <select name="milestone_id">
            <% Milestone.all.each do |m| %>
              <% if m.people.exists?(@id) %> #no hago nada
              <% else %>
                <option value= <%=m.id%> > <%=m.title%></option>
                <%= count=count+1%>
              <% end %>
            <% end %>
          </select>

          <% if count>0 %>
            <%= submit_tag('Assign') %>
          <% else %>
            There are not available milestones
          <% end %>
        <% end %>
      </div>
    </div>


    <div class="card-col col-xs-5 col-sm-5 col-md-5 col-lg-5">
      <%= render 'people/timeline_card' %>
    </div>
  </div>
</div>
