<div class="container">
  <div class="row">
    <div class="col-xs-12">

      <div class="table-container">
        <h1>
          <% if current_user_admin? %>
            <%= link_to new_project_path, method: :get do%>
                <span class='large-text glyphicon glyphicon-plus table-add-button pull-left'></span>
            <% end %>
          <% end %>
          <%= t('project.index.header') %>
        </h1>
        <table class="table datatable" data-info="false">
          <thead>
          <tr>
            <td></td>

            <td><%= t('project.name') %></td>
            <td><%= t('project.client') %></td>
            <td><%= t('project.start_date') %></td>
            <td><%= t('project.end_date') %></td>
            <% if current_user_admin? %>
                <td></td>
                <td></td>
            <% end %>
          </tr>
          </thead>
          <tbody>
          <% @projects.each do |m| %>
              <tr>
                <td><%=  I18n.t("project.display_status.#{m.status}") %> </td>
                <td><%= link_to m.name, project_path(m)%></td>
                <td><%= m.client %></td>
                <td><div class="calendar left"><%= m.start_date %></div></td>
                <td><div class="calendar left"><%= m.end_date %></div></td>
                <% if current_user_admin? %>
                    <td><%= link_to edit_project_path(m) do%>
                        <span class='large-text glyphicon glyphicon-pencil'></span>
                      <% end %>
                    </td>

                    <td><%= link_to project_path(m),
                                    method: :delete,
                                    data: { confirm: t('project.delete.sure') } do %>

                          <span class='large-text glyphicon glyphicon-trash'></span>
                      <% end %>
                    </td>
                <% end %>
              </tr>
          <% end %>
          </tbody>
        </table>
        <%= will_paginate @projects %>
      </div>


    </div>
  </div>
</div>

