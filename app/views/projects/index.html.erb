<h1><%= t('project_index_header') %></h1>
<table>
  <tr>
    <th><%= t('project_id') %></th>
    <th><%= t('project_name') %> </th>
  </tr>
  <% projects = Project.all %>
  <% projects.each do |p| %>
    <tr>
      <td>
        <%= link_to p.id, p %>
      </td>
      <td>
        <%= link_to p.name, p %>
      </td>
    </tr>
  <% end %>
</table>
<% if projects.size == 0 %>
<em><%= t('project_no_projects') %></em>
<% end %>
