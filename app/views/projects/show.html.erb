<p>
  <label>
    <%= t('project_name') %>
  </label>
  <%= @project.name %>
</p>
<p>
  <label>
    <%= t('project_client') %>
  </label>
  <%= @project.client %>
</p>
<p>
  <label>
    <%= t('project_status') %>
  </label>
