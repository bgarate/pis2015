<div class="container-fluid">
  <div class="row">
    <div class="card-col col-xs-4 col-xs-offset-4">
      <div id="div_project">
        <h1><span class="glyphicon glyphicon-check"></span><%= t('project.view') %></h1>
        <table class="table table-striped">
          <tbody>
          <tr>
            <td>
              <label>
                <%= t('project.name') %>
              </label>
              <%= @project.name %>
              <% if current_user_admin? %>
                <%= link_to edit_project_path(@project) do %>
                  <span class="edit glyphicon glyphicon-edit"></span>
                <% end %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td>
              <label>
                <%= t('project.client') %>
              </label>
              <%= @project.client %>
            </td>
          </tr>
          <tr>
            <td>
              <label>
                <%= t('project.status') %>
              </label>
              <%= @project.display_status %>
            </td>
          </tr>
          <tr>
            <td>
              <label>
                <%= t('project.start_date') %>
              </label>
              <%= @project.start_date %>
            </td>
          </tr>
          <tr>
            <td>
              <label>
                <%= t('project.end_date') %>
              </label>
              <%= @project.end_date %>
            </td>
          </tr>
          <tr>
            <td>
              <label>
                <%= t('project.technologies.title') %>
              </label>
              <% @technologies.each do |t| %>
                  <li><%= t.name %></li>
              <% end %>
              <% if @technologies.size == 0 %>
                  <em><%= t('project.technologies.zero') %></em>
              <% end %>
            </td>
          </tr>
          <tr>
            <td>
              <label>
                <%= t('project.people.title') %>
              </label>
              <% @people.each do |t| %>
                  <li>
                    <%= link_to t.name, t %>
                    <%= link_to  controller: 'projects', action: 'unassign_person' ,project_id: @project.id, person_id: t.id do %>
                        <span class='large-text glyphicon glyphicon-remove'></span>
                    <% end%>
                  </li>
              <% end %>
              <% if @people.size == 0 %>
                  <em><%= t('project.people.zero') %></em>
              <% end %>
            </td>
          </tr>
          <tr>
            <td>
              <%= form_tag ({:action => 'assign_person', :controller => 'projects', :project_id => @project.id}) do   %>
                  <% if !@usr.empty?%>
                      <label>
                        <%= t('project.assign.title') %>
                      </label>
                      <br>
                      <select name="person_id">
                        <% @usr.each do |p|%>
                            <option value= <%=p.id%> > <%=p.name%></option>
                        <% end %>
                      </select>
                      <%= button_tag t('project.assign.submit'), :type => 'submit', id: "buttonTwo" %>
                  <% end %>
              <% end%>
            </td>
          </tr>


          </tbody>
        </table>
        <%= link_to '/projects' do%>
            <button type="button"  class="btn btn-default btn-xs"><span class="glyphicon glyphicon-th-list"></span>  <%=t("project.index.header")%></button>
        <%end%>
      </div>
    </div>
  </div>
</div>
<br>
<br>
