<p>
  <label>
    <%= t('project_name') %>
  </label>
  <%= @project.name %>
</p>
<p>
  <label>
    <%= t('project_client') %>
  </label>
  <%= @project.client %>
</p>
<p>
  <label>
    <%= t('project_status') %>
  </label>
  <%= @project.display_status %>
</p>
<p>
  <label>
    <%= t('project_start_date') %>
  </label>
  <%= @project.start_date %>
</p>
<p>
  <label>
    <%= t('project_end_date') %>
  </label>
  <%= @project.end_date %>
</p>
<p>
    <label>
    <%= t('project_technologies') %>
    </label>
    <% @project.technologies.each do |t| %>
      <li><%= t.name %></li>
    <% end %>
    <% if @project.technologies.size == 0 %>
    <em><%= t('project_no_technologies') %></em>
    <% end %>
</p>
<p>
  <label>
    <%= t('project_people') %>
  </label>
  <% @project.people.each do |t| %>
    <li><%= link_to t.name, t %></li>
<% end %>
<% if @project.people.size == 0 %>
    <em><%= t('project_no_people') %></em>
<% end %>
</p>