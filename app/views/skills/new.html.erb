<div class="container">
  <div class="row">
    <div class="card-col col-xs-4 col-xs-offset-4">

      <%= form_for @skill, url:skills_path, html: { class:'main-form','data-toggle': 'validator'} do |f| %>
          <h1><span class="glyphicon glyphicon-wrench"></span> <%= t('skills.new.header') %></h1>

          <div class="form-group">
            <%= f.label t('name'), class: "control-label" %>
            <%= f.text_field :name, class: "form-control", 'data-validation': "required"%>
          </div>

        <div class="form-group">
          <%= f.label t('type'), class: "control-label" %>
          <%= f.select :technical, {t('skills.technical')=>true, t('skills.not_technical')=> false}, {:multiple => false, :class => "chosen", 'style'=> 'width:100%'} %>
        </div>

      <div class="col-xs-6 col-offset-xs-3">
        <div class="image-preview"></div>
      </div>

      <div class="row">
        <div class="col-xs-12">
          <div class="progress hidden">
            <div class="progress-bar" role="progressbar">
            </div>
          </div>
        </div>
      </div>


      <div class="form-group">
          <%= f.label t('icon'), class: "control-label" %>
          <%= f.cl_image_upload(:icon, :crop => :fill, :width => 30, :height => 30) %>
    </div>

          <%= f.button t('skills.new.submit'), :type => 'submit', class: "btn btn-default" %>
      <% end %>

    </div>
  </div>
</div>