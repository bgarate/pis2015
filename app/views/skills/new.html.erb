<div class="container">
  <div class="row">
    <div class="card-col col-xs-4 col-xs-offset-4">

      <%= form_for @skill, url:skills_path, html: { class:'main-form','data-toggle': 'validator'} do |f| %>
          <h1><span class="glyphicon glyphicon-wrench"></span> <%= t('skills.new.header') %></h1>

          <div class="form-group">
            <%= f.label t('name'), class: "control-label" %>
            <%= f.text_field :name, class: "form-control", 'data-validation': "required", :maxlength => "30"%>
          </div>

        <div class="form-group">
          <%= f.label t('type'), class: "control-label" %>
          <%= f.text_field :type, class: "form-control", :maxlength => "30"%>
        </div>

        <div class="form-group">
          <%= f.label t('icon'), class: "control-label" %>
          <%= f.text_field :icon, class: "form-control", :maxlength => "30"%>
        </div>

          <%= f.button t('skills.new.submit'), options= :type => 'submit', class: "btn btn-default" %>
      <% end %>

    </div>
  </div>
</div>