<div class="container">
  <div class="row">
    <div class="card-col col-xs-4 col-xs-offset-4">

      <%= form_for @tag, html: { class:'main-form','data-toggle': 'validator'} do |f| %>
          <h1><span class="glyphicon glyphicon-tag"></span> <%= t('tags.edit.header') %></h1>

          <div class="form-group">
            <%= f.label t('name'), class: "control-label" %>
            <%= f.text_field :name, class: "form-control", 'data-validation': "required" %>
          </div>

          <div class="btn">
            <%= f.button t('tags.edit.submit'), options= :type => 'submit', class: "btn btn-default" %>
          </div>
      <% end %>

    </div>
  </div>
</div>