<%= form_for @tag do |f| %>
    <div class="field">
      <%= f.label t('tag_name') %><br>
      <%= f.text_field :name %>
    </div>
    <div class="btn">
      <%= f.button t('tag_edit_submit'), options= :type=>'button', :onclick=>'if(validate()){submit();};' %>
    </div>
<% end %>

<script>
    function validate(form){
        var name;
        // Get the value of the input field with id="name"
        name = document.getElementById('tag_name').value;
        // Validate
        return (name!='');
    }
</script>