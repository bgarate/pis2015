<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">

      <div class="table-container table-difrows">

        <h1>
            <%= link_to new_tag_path do%>
                <span class='large-text glyphicon glyphicon-plus table-add-button pull-left'>  </span>
            <% end %>
          <%= t('tags.index.header') %>
        </h1>
        <table class="table datatable" data-info="false">

          <thead>
          <tr>
            <th><%= t('name') %></th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @tags.each do |t| %>
              <tr>
                <td><%= t.name %></td>
                <td class="actions">
                  <%= link_to edit_tag_path(t) do%>
                      <span class='glyphicon glyphicon-pencil'></span>
                  <% end %>
                <%= link_to tag_path(t),
                                method: :delete,
                                data: { confirm: t('tags.delete.sure') } do %>
                      <span class='glyphicon glyphicon-trash'></span>
                  <% end %>
                </td>

              </tr>
          <% end %>
          </tbody>
        </table>
        <%= will_paginate @tags %>
      </div>


    </div>
  </div>
</div>

