<div class="container">
  <div class="row">
    <div class="card-col col-xs-4 col-xs-offset-4">

      <%= form_for :tag, url:tags_path, html: { class:'main-form','data-toggle': 'validator'} do |f| %>
          <h1><span class="glyphicon glyphicon-tag"></span> <%= t('tags.new.header') %></h1>

          <div class="form-group">
            <%= f.label t('name'), class: "control-label" %>
            <%= f.text_field :name, class: "form-control", 'data-validation': "required" %>
          </div>

          <%= f.button t('tags.new.submit'), options= :type => 'submit', class: "btn btn-default" %>
      <% end %>

    </div>
  </div>
</div>